@{
    ViewData["Title"] = "Розмістити замовлення";
}
<div class=" container mt-2">
    <div class=" card">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">Страви ресторана "@Model.Restaurant"</h5>
        </div>
        <div class="card-body">
            <form lass="form-horizontal" asp-action="PlaceOrder" method="post">
                <input asp-for="@Model.Restaurant" type="hidden" />
                <p class="text-muted mb-3">
                    Оберіть необхідну кількість страв.
                </p>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Items.First().ItemName)</th>
                            <th>@Html.DisplayNameFor(model => model.Items.First().Price)</th>
                            <th style="width:100px;">@Html.DisplayNameFor(model => model.Items.First().Cnt)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Items.Count; i++)
                        {
                            var item = Model.Items[i];
                            <tr>
                                <td >@item.ItemName</td>
                                <td>@item.Price.ToString("C")</td>
                                <td>
                                    <input asp-for="@Model.Items[i].Cnt"
                                           class="form-control"
                                           min="0" />
                                    <input asp-for="@Model.Items[i].ItemId" type="hidden" />
                                    <input asp-for="@Model.Items[i].ItemName" type="hidden" />
                                    <input asp-for="@Model.Items[i].Price" type="hidden" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div asp-validation-summary="ModelOnly" class="text-danger form-group">
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-shopping-cart"></i> Розмістити замовлення
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>


