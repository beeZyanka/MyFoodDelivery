@model IEnumerable<MyFoodDelivery1.Models.Restaurant>
@{
    ViewData["Title"] = "Ресторани";
}
<div class="container-fluid mt-3">
    <div class="card">
        <div class="card-header bg-secondary text-white">
            <h2 class="mb-0">Ресторани</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Address)
                            </th>
                            <th> @Html.DisplayNameFor(model => model.Rating) </th>
                            <th> Меню ресторана</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @{
                                        var item_for_partial = item;
                                    }
                                    <partial name="_RatePartial" model="item_for_partial" />
                                </td>
                                <td>
                                    <a class="badge bg-info text-light" asp-controller="dishes" asp-action="Menu" asp-route-id="@item.Id">
                                        <i class="bi bi-book"></i>&nbsp;Переглянути
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

        </div>

    </div>

</div>

