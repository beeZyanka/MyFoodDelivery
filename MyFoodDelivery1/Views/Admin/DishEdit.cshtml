@model MyFoodDelivery1.Models.Dish
@{
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
@{
    ViewData["Title"] = "Редагування страви";
}

<div class=" container mt-2">
    <div class=" card">
        <div class="card-header bg-secondary text-white">
            <h2 class="mb-0">Редагування страви</h2>
        </div>
        <div class="card-body">
            <form сlass="form-horizontal" asp-action="DishEdit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <label asp-for="RestaurantId" class="control-label"></label>
                    <input readonly="readonly" class="form-control" value="@ViewBag.RestName" />
                    <input type="hidden" asp-for="RestaurantId" name ="rest" value="@ViewBag.RestId" />
                    
                </div>
                <div class="form-group">
                    <input type="submit" value="Зберегти" class="btn btn-success" />
                </div>
            </form>

        </div>
        <div class="card-footer">
            <div>
                <a asp-action="DishTotal">Повернутися</a>
            </div>

        </div>
    </div>

</div>

