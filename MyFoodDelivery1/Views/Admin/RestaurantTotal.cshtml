@model IEnumerable<MyFoodDelivery1.Models.Restaurant>
@{
    ViewData["Title"] = "Адміністрування ресторанів";
}
<div class=" container-fluid mt-2">
    <div class=" card">
        <div class="card-header bg-dark text-light">
            <h3 class="mb-0">Адміністрування ресторанів</h3>
        </div>
        <div class="card-body">
            <div class="card-title">
                <a class="badge bg-warning text-black" asp-action="RestaurantCreate">Додати ресторан</a>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Address)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Rating)
                            </th>
                            <th>Дія</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @{
                                        var item_for_partial = item;
                                    }
                                    <partial name="_RatePartial" model="item_for_partial" />
                                </td>
                                <td>
                                    <a class="badge bg-success text-light" asp-action="RestaurantEdit" asp-route-id="@item.Id">Відредагувати</a>
                                    <a class="badge bg-danger text-light" asp-action="RestaurantDelete" asp-route-id="@item.Id">Видалити</a>
                                    

                                    @* <a class="btn btn-success text-light"  asp-action="RestaurantEdit" asp-route-id="@item.Id">Відредагувати</a> 
                                    <a class="btn btn-danger text-light" asp-action="RestaurantDelete" asp-route-id="@item.Id">Видалити</a> *@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

