@model MyFoodDelivery1.Models.Restaurant
@{
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";

}
@{
    ViewData["Title"] = "Редагування ресторану";
}
<div class=" container mt-2">
    <div class=" card">
        <div class="card-header bg-secondary text-white">
            <h2 class="mb-0">Редагування ресторану</h2>
        </div>
        <div class="card-body">
            <form сlass="form-horizontal" asp-action="RestaurantEdit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="About" class="control-label"></label>
                    <input asp-for="About" class="form-control" />
                    <span asp-validation-for="About" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rating" class="control-label"></label>
                    <select asp-for="Rating" class="form-control" asp-items="ViewBag.Rating"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Зберегти" class="btn btn-success" />
                </div>
            </form>

        </div>
        <div class="card-footer">
            <div>
                <a asp-action="RestaurantTotal">Повернутися</a>
            </div>

        </div>
    </div>

</div>





